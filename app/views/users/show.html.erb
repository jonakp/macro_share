<% provide(:title, 'Home') %>
<div class="py-5">
  <div class="container">
    <div class="row">
      <div class="col-md-4">
        <h1>
          <%= @user.name%>
          <%= image_tag("#{@user.image_name}", alt: "user logo", class: "img-fluid")%>
        </h1>
      </div>
      <div class="col-md-8">
        <% if User.find(params[:id]).userfeature.nil? %>
          <%= render 'users/before_reg'%>
        <% else %>
          <%= render 'users/after_reg'%>
        <% end %>
      </div>
    </div>
  </div>
</div>
